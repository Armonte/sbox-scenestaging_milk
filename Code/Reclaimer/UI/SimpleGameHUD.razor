        if (abby.IsInvincible) status.Add("‚ú® INVINCIBLE");
        if (abby.PremiumMilkActive) status.Add("‚≠ê PREMIUM");
        
        // Show milk spoilage timer
        if (abby.CurrentMilk > 0 && !abby.PremiumMilkActive && abby.MilkSpoilageTimer > 0)
